<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/custom_gradient"
        android:padding="10dp">

        <TextView
            android:id="@+id/lbl_admin_order_date"
            android:layout_width="367dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="Date"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/lbl_admin_order_name"
            android:layout_width="367dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_below="@id/lbl_admin_order_date"
            android:textAlignment="center"
            android:text="Name" />

        <TextView
            android:id="@+id/lbl_admin_order_mail"
            android:layout_width="367dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_below="@id/lbl_admin_order_name"
            android:textAlignment="center"
            android:text="Mail" />

        <TextView
            android:id="@+id/lbl_admin_order_town"
            android:layout_width="367dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_below="@id/lbl_admin_order_mail"
            android:textAlignment="center"
            android:text="Town" />

        <TextView
            android:id="@+id/lbl_admin_order_phone"
            android:layout_width="367dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_below="@id/lbl_admin_order_town"
            android:textAlignment="center"
            android:text="phone" />

        <TextView
            android:id="@+id/lbl_admin_order_address"
            android:layout_width="367dp"
            android:layout_height="70dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_below="@id/lbl_admin_order_phone"
            android:textAlignment="center"
            android:text="Address" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>