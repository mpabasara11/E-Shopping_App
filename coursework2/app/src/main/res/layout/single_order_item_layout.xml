<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/custom_gradient"
        android:padding="10dp">

        <TextView
            android:id="@+id/order_item_product_name"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Product Name"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_item_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_item_product_name"
            android:layout_marginTop="60dp"
            android:paddingLeft="260dp"
            android:text="Product Price"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_order_item_product"
            android:layout_width="116dp"
            android:layout_height="112dp"
            android:layout_marginTop="40dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/order_item_product_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_item_product_price"
            android:layout_marginTop="14dp"
            android:paddingLeft="260dp"
            android:text="Product Quantity"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="79dp"
            android:text="Rs/                    :"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="12dp"
            android:text="Quantity           :"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>