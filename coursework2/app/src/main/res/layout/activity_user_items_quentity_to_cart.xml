<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dash2"
    tools:context=".Activity_user_items_quentity_to_cart">


    <TextView
        android:textSize="24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:text="Enter The Quantity" />

    <ImageView
        android:id="@+id/img_user_item_Quentity"
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:layout_marginTop="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/lbl_user_add_to_cart_quen_itemName"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Name" />

    <TextView
        android:id="@+id/lbl_user_add_to_cart_quen_itemPrice"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Price" />

    <EditText
        android:id="@+id/txt_user_add_to_cart_quen_itemQuentity"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColorHint="#ffffff"
        android:backgroundTint="@color/white"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_user_add_to_cart_quen_itemAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/edit_button"
        android:text="Add To Cart" />


</LinearLayout>